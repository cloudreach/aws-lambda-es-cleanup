{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "LambdaLogCreation",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:*"
    },
    {
      "Effect":"Allow",
      "Action": [
        "ec2:CreateNetworkInterface",
        "ec2:DescribeNetworkInterfaces",
        "ec2:DeleteNetworkInterface"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ESPermission",
      "Effect": "Allow",
      "Action": [
        "es:*"
      ],
      "Resource": "${es_arn}"
    }
  ]
}
